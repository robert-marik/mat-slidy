j=0

kde="funkce derivace aproximace integraly integraly2 ode matice inverzni_matice soustavy vektorove_pole dvojny_integral shrnuti"

for i in $kde
do
  echo $i
  let "j=$j+1"
  jj=$j
  if [ "$j" -lt "10" ]; then
    jj="0$j"
  fi

  cd $i
  pandoc --template ../default.latex slidy.md -o slidy.tex
  vlna slidy.tex
  sed -i 's/♣/\\ensuremath{\\clubsuit}/g' slidy.tex
  sed -i 's/♠/\\ensuremath{\\spadesuit}/g' slidy.tex
  sed -i 's/\\begin{longtable}/{\\centering\\begin{supertabular}/g' slidy.tex
  sed -i 's/\\end{longtable}/\\end{supertabular}\\par}/g' slidy.tex
  vlna pdfslide.tex
  pdflatex slidy.tex
  pdflatex slidy.tex
  cp slidy.pdf ../$i.pdf
  cp slidy.pdf ../$jj.pdf
  cd ..
  rsync -e "ssh -o StrictHostKeyChecking=no" -av $i cornus.mendelu.cz:html/mt/mat-slidy/
done


pdftk ??.pdf cat output mat_slidy_all.pdf
rm ??.pdf
